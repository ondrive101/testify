<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />


  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
    }

    .page {
      padding: 20px;
    }

    .title {
      font-weight: bold;
      padding: 5px 0;
      border: 1px solid gray;
      font-size: 16px;
      text-align: center;
      text-decoration: underline;
      margin: 0;
    }

    .container-box {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
      padding: 20px;
      border: 1px solid gray;

    }

    .image-left,
    .image-right {
      width: auto;
      height: 55px;
    }

    .company {
      font-size: 20px;
      text-align: center;
      font-weight: bold;
      padding-top: 12px;
      margin: 0;
    }

    .address {
      font-size: 12px;
      white-space: normal;
      line-height: 1.2;
      max-width: 350px;
      text-align: center;
    }

    .gst-info {
      padding: 5px 0;
      border: 1px solid gray;
      font-size: 14px;
      text-align: center;
      font-weight: bold;
      margin: 0;


    }

    .left {
      flex: 0 0 25rem;
      margin-right: 50px;
    }

    .heading {
      font-size: 12px;
      margin: 5px 0;
      font-weight: bold;
    }

    .heading-details {
      font-size: 11px;
      font-weight: 100;

    }

    .patient-address {
      line-height: 1.4;
      display: inline;
    }

    .container-table {
      padding: 10px;
      border: 1px solid gray;

    }

    .table {
      font-size: 11px;

    }

    .table td {
      vertical-align: middle;

    }

    .table td:nth-child(1) {
      width: 35px;
    }

    .table td:nth-child(3) {
      width: 60px;
    }

    .table td:nth-child(5) {
      width: 85px;
    }

    .table td:nth-child(4) {
      width: 45px;
    }

    .table td:nth-child(6),
    .table td:nth-child(n + 7) {
      width: 40px;
    }

    .table td:not(:nth-child(2)),
    .table th:not(:nth-child(2)) {
      text-align: center;
    }

    .table-bottom-heading {
      font-weight: bold;
      text-align: left;
    }

    #table-inWords {
      font-weight: bold;
      text-align: left;

    }

    .stampArea {
      padding: 10px;
      border: 1px solid gray;
      height: 150px;

    }

    .stampArea .right {

      font-weight: bold;
      font-size: 12px;
      text-align: right;

    }

    .alert-text {
      color: red;
      font-size: 10px;

    }
  </style>

</head>

<body>
  <div class="page">
    <h2 class="title">Invoice</h2>


    <div class="container-box">


      {{! logo }}
      <div class="logo">
        <img src="data:image/png;base64,{{logoBase64}}" alt="logo" class="image-left" />
      </div>
      {{! -------------- }}


      {{! company }}
      <div class="text">
        <h2 class="company">Jeena Sikho Lifecare Limited</h2>
        <p class="address">Plot B-26, New Multan Nagar, Near Paschim Vihar
          Metro Station, Opp, Metro Pillar no.223, Rohtak Road.</p>
      </div>
      {{! -------------- }}


      {{! logo }}
      <div class="logo">
        <img src="data:image/jpg;base64,{{logoBase64}}" alt="logo" class="image-right" />
      </div>
      {{! -------------- }}

    </div>
    <h2 class="gst-info">GSTIN/UIN : 27AADCJ9908J1Z4</h2>
    {{!-- patient Details --}}
    <div class="container-box">
      <div class="left">


        <h6 class="heading">Dated: <span class="heading-details">{{opd.formatedDate}}</span></h6>
        <h6 class="heading">Name: <span class="heading-details">{{patient.name}}</span></h6>
        <h6 class="heading">Father/Husband Name: <span class="heading-details">{{patient.family}}</span></h6>
        <h6 class="heading">Address: <span class="heading-details">
            <p class="patient-address">{{patient.address}}</p>
          </span></h6>

      </div>
      <div class="right">
        <h6 class="heading">Invoice: <span class="heading-details">{{opd.invoiceNumber}}</span></h6>
        <h6 class="heading">Sex: <span class="heading-details">{{patient.gender}}</span></h6>
        <h6 class="heading">UHID: <span class="heading-details">{{patient.uhid}}</span></h6>
        <h6 class="heading">Opd No: <span class="heading-details">{{opd.opdNumber}}</span></h6>
        <h6 class="heading">Card No: <span class="heading-details">{{patient.beneId}}</span></h6>
        <h6 class="heading">State Name: <span class="heading-details">{{patient.state}}</span></h6>
      </div>
    </div>
    {{!-- ---------------- --}}
    <div class="container-table">

      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">S.No.</th>
            <th scope="col">Description</th>
            <th scope="col">HSN Code</th>
            <th scope="col">Barcode</th>
            <th scope="col">Item Code</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Units</th>
            <th scope="col">GST Rate</th>
            <th scope="col">GST Amount</th>
            <th scope="col">Total Amount</th>
          </tr>
        </thead>
        <tbody>
          {{#each opd.updatedMedicine}}
          <tr>
            <td>{{this.serial}}</td>
            <td>{{this.name}}</td>
            <td>{{this.hsn}}</td>
            <td></td>
            <td>{{this.productCode}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.gstRate}}%</td>
            <td>{{this.gstAmount}}</td>
            <td>{{this.totalAmount}}</td>
          </tr>
          {{/each}}


          <tr>
            <td colspan="8"></td>
            <td class="table-bottom-heading">Total</td>
            <td>{{opd.amount}}</td>
          </tr>

          <tr>
            <td colspan="8"></td>
            <td class="table-bottom-heading">Discount </td>
            <td>0</td>
          </tr>

          <tr>
            <td colspan="8"></td>
            <td class="table-bottom-heading">HSN/SAC</td>
            <td>0</td>
          </tr>

          <tr>
            <td colspan="8"></td>
            <td class="table-bottom-heading">Payable Total</td>
            <td>{{opd.amount}}</td>
          </tr>

          <tr>
            <td colspan="10" id="table-inWords">Amount (in words):<span class="heading-details"> {{opd.amountinwords}}</span></td>

          </tr>

        </tbody>

      </table>

      <h6 class="alert-text">*This is computer generated invoice hence signature not required.</h6>
    </div>
    <div class="stampArea">
      <h6 class="right">For Jeena Sikho Lifecare Ltd.</h6>
    </div>
  </div>



  </div>

</body>

</html>